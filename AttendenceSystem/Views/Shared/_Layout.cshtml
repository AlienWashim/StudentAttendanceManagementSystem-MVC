<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SMSystem</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        footer {
            background-color: darkslategray;
            color: white;
            text-align: center;
            padding: 10px 0;
            width: 100%;
            height: 50px;
            position: sticky;
            bottom: 0;
        }

        .content {
            flex: 1;
            margin-top: 0px;
        }


        .leftMenu {
            display: flex;
            flex-direction: column;
            background-color: #EEF7FF;
            box-shadow: 4px 0 4px rgba(0, 0, 0, 0.5);
            width: fit-content;
            margin-top: 2px;
            margin-left: 2px;
            margin-right: 1px;
            position: absolute;
        }

        .bg-top {
            background-color: darkslategray;
        }

        .textBlack {
            color: black;
        }

        .wrapper {
            display: flex;
            width: 100%;
            flex: 0;
        }

        .sidebar {
            width: 260px;
            height: 100%;
            position: sticky;
            margin-top: 0px;
            top: 0;
            bottom: 0;
            background: #EEF7FF;
            color: black;
            padding-top: 1rem;
            padding-bottom: 1rem;
            overflow-y: auto;
            transform: translateX(0);
            transition: transform 0.3s ease-in-out;
            box-shadow: 1px 0 2px rgba(0, 0, 0, 0.5);
            font-family: Arial;
            font-size: 16px;
        }

        .custom-font {
            font-family: Arial;
            font-size: 16px;
        }

        .active-link {
            background-color: #007bff;
            color: white !important;
            font-weight: bold;
        }

        .nav-link {
            display: inline-block;
            padding: 10px;
        }

        .setting-link.active {
            background-color: #007bff;
            color: white !important;
            font-weight: bold;
        }


    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-top">
        <div class="container">
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <main class="content">
        <div class="d-sm-inline-flex d-md-flex">
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Partial("SideMenu")
                }
            </div>

            <div class="container body-content">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Md Washim Akram. All rights reserved.</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        // Get the current page path (not full URL)
        const currentPath = window.location.pathname;

        // Get all menu items
        const menuItems = document.querySelectorAll('.sidebar .leftItem .nav-link');

        // Loop through menu items and highlight the active link
        menuItems.forEach(item => {
            if (item.getAttribute('href') === currentPath) {
                item.classList.add('active-link');
            }
        });

    </script>
</body>

</html>
